<?xml version="1.0" encoding="utf-8"?><extension version="2.5" type="plugin" group="zoombie" method="upgrade" client="site">    <name>Zoombie - User Detector</name>    <author>alikon</author>    <creationDate>April 2013</creationDate>    <authorEmail>info@alikonweb.it</authorEmail>    <authorUrl>http://www.alikonweb.it</authorUrl>    <copyright>Copyright (C) 2012 Alikonweb</copyright>    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>    <version>1.1.0</version>    <description>PLG_ZOOMBIE_USERDETECTOR_4_JOOMLA_XML_DESCRIPTION</description>    <files>		        <filename plugin="userdetector">userdetector.php</filename>	        <filename>index.html</filename>			    </files>    <languages>        <language tag="en-GB" client="site">language/en-GB/en-GB.plg_zoombie_userdetector.ini</language>        <language tag="en-GB">language/en-GB/en-GB.plg_zoombie_userdetector.sys.ini</language>     </languages>    <config>        <fields name="params">            <fieldset name="basic" label="Basic">                <field name="last_run" type="hidden" default="1352101719" label="Admin advise" description="Send email to Admin on spam ">                </field>                <field name="interval" type="list" default="60" label="Interval" description="When go alive">			                    <option value="5" > 5 min</option>                    <option value="10" >10 min</option>                    <option value="20" >20 min</option>                    <option value="30" >30 min</option>                    <option value="60" > 1 hour</option>                    <option value="120" > 2 hours</option>                    <option value="180" > 3 hours</option>                    <option value="240" > 4 hours</option>                    <option value="360" > 6 hours</option>                    <option value="720" > 12 hours</option>                    <option value="1440" selected="selected" > 24 hours</option>			                    <option value="2880" > 2 days</option>                    <option value="10080" > 1 week</option>                    <option value="20160" > 2 weeks</option>                    <option value="40320" > 1 month</option>                    <option value="80640" > 2 month</option>                    <option value="120960" > 3 month</option>                    <option value="161280" > 4 month</option>                    <option value="241920" > 6 month</option>                    <option value="483840" > 1 year</option>                </field>                                                <field name="sendmail" type="radio" label="Mail" default="1" description="Send mail when zoombie alive" >                    <option value="0">JNO</option>                    <option value="1">JYES</option>                </field>                  <field name="runned" type="hidden" default="0" label="runned" description="number of runned task" />	                <field name="durata" type="hidden" default="0" label="durata" description="runned task times" />                <field name="maxcheck" type="text" default="10" label="Max users to check" description="Check max items"></field>                <field name="days" type="text" default="10" label="Max days check" description="Check days users"></field>                <field name="checktype" type="list" default="1" label="Check" description="Choose the type of check">                    <option value="1">Normal</option>                    <option value="0">Full</option>                </field>			                <field name="sendmail2adm" type="radio" default="1" label="Admin advise" description="Send email to Admin on spam ">                    <option value="1">YES</option>                    <option value="0">NO</option>                </field>                <field name="blockspammer" type="radio" default="1" label="User Block" description="Block user detected as spammer">                    <option value="1">YES</option>                    <option value="0">NO</option>                </field>                <field name="logoffspammer" type="radio" default="1" label="User Logoff" description="Logoff user detected on spam">                    <option value="1">YES</option>                    <option value="0">NO</option>                </field>                <field name="hidemessage" type="radio" default="1" label="Hide" description="Set pending message detected as spam">                    <option value="1">YES</option>                    <option value="0">NO</option>                </field>                          </fieldset>			        </fields>    </config>    <updateservers>        <server type="extension" priority="1" name="Zoombie - User Detector">http://www.joomladdons.eu/update/plg_zoombie_userdetector_update.xml</server>    </updateservers></extension>