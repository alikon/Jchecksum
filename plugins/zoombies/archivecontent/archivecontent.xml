<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="zoombie" method="upgrade" client="site">
    <name>Zoombie - Archive Content</name>
    <author>alikon</author>
    <creationDate>March 2013</creationDate>
    <authorEmail>info@alikonweb.it</authorEmail>
    <authorUrl>http://www.alikonweb.it</authorUrl>
    <copyright>Copyright (C) 2012 Alikonweb</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.0.0</version>
    <description><![CDATA[
	<br /><br />
	Task for archive publish unpublish article based on their age.<br /><br />
	This task run if the Zoombie plugin is enabled and properly setted.<br /><br /><br /><br />
	
	if you like our extension please vote for us on : <a href="http://extensions.joomla.org/extensions/owner/alikon" rel="nofollow" target="_blank" class="external">Joomla Extensions Directory</a>
	]]>
    </description>
    <files>
        <filename plugin="archivecontent">archivecontent.php</filename>
        <filename>index.html</filename>

    </files>
    <config>
 
        <fields name="params">
            <fieldset name="Basic" label="Basic">
                <field name="last_run" type="hidden" default="1352101719" label="Admin advise" description="Send email to Admin on spam ">
                </field>
                <field name="interval" type="list" default="60" label="Interval" description="When go alive">			
                    <option value="5" > 5 min</option>
                    <option value="10" >10 min</option>
                    <option value="20" >20 min</option>
                    <option value="30" >30 min</option>
                    <option value="60" > 1 hour</option>
                    <option value="120" > 2 hours</option>
                    <option value="180" > 3 hours</option>
                    <option value="240" > 4 hours</option>
                    <option value="360" > 6 hours</option>
                    <option value="720" > 12 hours</option>
                    <option value="1440" selected="selected" > 24 hours</option>			
                    <option value="2880" > 2 days</option>
                    <option value="10080" > 1 week</option>
                    <option value="20160" > 2 weeks</option>
                    <option value="40320" > 1 month</option>
                    <option value="80640" > 2 month</option>
                    <option value="120960" > 3 month</option>
                    <option value="161280" > 4 month</option>
                    <option value="241920" > 6 month</option>
                    <option value="483840" > 1 year</option>
                </field>                    
             
                <field name="sendmail" type="radio" label="Mail" default="1" description="Send mail when zoombie alive" >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>  
 
                
            </fieldset>
            <fieldset
                name="advanced">
                <field name="action" type="radio" label="Action" default="1" description="Archive or unpublish/publish when zoombie alive" >
                    <option value="2">Archive</option>
                    <option value="3">Unarchive</option>
                    <option value="0">Unpublish</option>
                    <option value="1">Publish</option>
                </field>     
                <field name="age" type="list" default="483840" label="Age" description="Archive or unpublish/publish content older than">			
                    <option value="1440" > 1 day</option>			
                    <option value="2880" > 2 days</option>
                    <option value="10080" > 1 week</option>
                    <option value="20160" > 2 weeks</option>
                    <option value="40320" > 1 month</option>
                    <option value="80640" > 2 month</option>
                    <option value="120960" > 3 month</option>
                    <option value="161280" > 4 month</option>
                    <option value="241920" > 6 month</option>
                    <option value="483840" selected="selected" > 1 year</option>
                    <option value="967680" > 2 year</option>
                    <option value="1451520" > 3 year</option>
                    <option value="1935360" > 4 year</option>
                </field>  
                <field
                    name="catid"
                    type="category"
                    extension="com_content"
                    multiple="true"
                    size="10"
                    default=""
                    label="JCATEGORY"
                    description="Selects Articles from one or more Categories. If no selection all categories as default" >
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>
                <field
                    name="count"
                    type="text"
                    default="5"
                    label="Count"
                    description="The number of Articles to elaborate" />

                <field
                    name="show_featured"
                    type="list"
                    default=""
                    label="Featured Articles"
                    description="Consider or not Articles designated as Featured">
                    <option
                        value="">JYES
                    </option>
                    <option
                        value="0">JNO
                    </option>
                    <option
                        value="1">Only Featured Articles
                    </option>
                </field>

                <field
                    name="ordering"
                    type="hidden"
                    
                    default="published"
                    label="MOD_LATEST_NEWS_FIELD_ORDERING_LABEL"
                    
                    description="MOD_LATEST_NEWS_FIELD_ORDERING_DESC">
                    <option
                        value="c_dsc">MOD_LATEST_NEWS_VALUE_RECENT_ADDED
                    </option>
                    <option
                        value="m_dsc">MOD_LATEST_NEWS_VALUE_RECENT_MODIFIED
                    </option>
                    <option
                        value="p_dsc">MOD_LATEST_NEWS_VALUE_RECENT_PUBLISHED
                    </option>
                    <option
                        value="mc_dsc">MOD_LATEST_NEWS_VALUE_RECENT_TOUCHED
                    </option>
                </field>

                <field
                    name="user_id"
                    type="list"
                    default="0"
                    label="Authors"
                    description="Filter by author">
                    <option
                        value="0">Anyone
                    </option>
                    <option
                        value="by_me">Added or modified by me
                    </option>
                    <option
                        value="not_me">Not added or modified by me
                    </option>
                </field>

                
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="Zoombie - Archive Content">http://www.joomladdons.eu/update/plg_zoombie_linkchecker_update.xml</server>
    </updateservers>
</extension>