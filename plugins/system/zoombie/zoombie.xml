<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade" client="site">
	<name>System - Alikonweb Zoombie</name>
<author>alikon</author>
<creationDate>October 2012</creationDate>
<authorEmail>info@alikonweb.it</authorEmail>
<authorUrl>http://www.alikonweb.it</authorUrl>
<copyright>Copyright (C) 2012 Alikonweb</copyright>
<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
<version>2.0.0</version>
<description>PLG_CRONDBBACKUP_4_JOOMLA_XML_DESCRIPTION</description>
	<files>
		<filename plugin="zoombie">zoombie.php</filename>
		<filename>index.html</filename>
    <folder>logs</folder>
	</files>
	<languages>
	   <language tag="en-GB">en-GB.plg_system_zoombie.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
			   <field name="interval" type="list" default="5" label="INTerval" >			
                <option value="1" > 1 min</option>
                <option value="2" > 2 min</option>				
			    <option value="3" > 3 min</option>
				<option value="4" > 4 min</option>
				<option value="5" > 5 min</option>
				<option value="10" >10 min</option>
				<option value="20" >20 min</option>
				<option value="30" >30 min</option>
				<option value="60" selected="selected"> 1 hour</option>
				<option value="120" > 2 hours</option>
				<option value="180" > 3 hours</option>
				<option value="240" > 4 hours</option>
				<option value="360" > 6 hours</option>
			    <option value="720" > 12 hours</option>
				<option value="1440" > 24 hours</option>			
			   </field> 
			   <field name="last_run" type="hidden" default="1352101719" label="FG_PLG_PCP_INT" description="FG_PLG_PCP_INT_DESC" />			
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="System - Detector">http://www.joomladdons.eu/update/plg_cron_userdetector_update.xml</server>
    </updateservers>
</extension>